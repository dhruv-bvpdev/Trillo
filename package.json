{
  "name": "Trillo",
  "version": "1.0.0",
  "description": "Landing page for a booking company",
  "main": "index.js",
  "scripts": {
    "client": "live-server",
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "dev": "concurrently \"yarn run watch:sass\" \"yarn run client\"",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon_font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Dhruv Gursahani",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "concat": "^1.0.3",
    "concurrently": "^7.0.0",
    "live-server": "^1.2.1",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhruv-bvpdev/Trillo.git"
  }
}
